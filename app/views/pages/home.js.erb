function setCount(value) {
  const count = document.getElementById('pomodoro_count');
  count.value = value;
}

function setText(text) {
  const submit = document.getElementById('submit');
  submit.value = text;
}

document.getElementById('counter').innerHTML++;

if (Number(document.getElementById('counter').innerHTML, 10) > 4)
  setText(
    `Max pomodoros is 4`
  );
else
  setText(
    `Start ${document.getElementById('counter').innerHTML} pomodoros`
  );

document.addEventListener(
  'onSubmit',
  setCount(document.getElementById('counter').innerHTML)
);
