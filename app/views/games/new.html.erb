<%= simple_form_for @game do |f| %>
  <%= f.input :locations,
    label: 'Selezionate i luoghi possibili',
    collection: @locations,
    as: :check_boxes
  %>
  <%= f.input :number_of_players,
    label: 'Numero di giocatori',
    collection: 4..8,
    as: :radio_buttons,
    include_blank: false
  %>

  <%= f.submit 'Conferma' %>
<% end %>
